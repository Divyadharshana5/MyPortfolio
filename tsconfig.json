{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/Component/ul/input.jsx",
    "app/Component/ul/scroll-area.jsx",
    "app/Component/ul/select.jsx",
    "app/Component/ul/sheet.jsx",
    "app/Component/ul/tabs.jsx",
    "app/Component/ul/textarea.jsx",
    "app/Component/ul/tooltip.jsx"
  ],
  "exclude": ["node_modules"]
}
